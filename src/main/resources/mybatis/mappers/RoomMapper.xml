<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hotelproject.mapper.RoomMapper">

    <!-- 특정 호텔의 객실 리스트 조회 -->
    <select id="getRoomsByHotelId" resultType="hotelproject.vo.RoomVo">
        SELECT * FROM rooms WHERE hotel_id = #{hotelId}
    </select>

    <!-- 특정 객실 정보 조회 -->
    <select id="getRoomById" resultType="hotelproject.vo.RoomVo">
        SELECT * FROM rooms WHERE id = #{roomId}
    </select>

</mapper>
