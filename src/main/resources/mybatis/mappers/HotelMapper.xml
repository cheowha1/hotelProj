<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hotelproject.mappers.HotelMapper">

    <!-- 전체 호텔 목록 조회 -->
    <select id="getAllHotels" resultType="hotelproject.repositories.vo.HotelVo">
        SELECT
            no, name, location, price, rating
        FROM
            hotels
    </select>

    <!-- 특정 호텔 조회 -->
    <select id="getHotelById" parameterType="int" resultType="hotelproject.repositories.vo.HotelVo">
        SELECT
            no, name, location, price, rating
        FROM
            hotels
        WHERE
            no = #{no}
    </select>

    <!-- 호텔 등록 -->
    <insert id="insertHotel" parameterType="hotelproject.repositories.vo.HotelVo">
        INSERT INTO hotels (name, location, price, rating)
        VALUES (#{name}, #{location}, #{price}, #{rating})
    </insert>

    <!-- 호텔 정보 수정 -->
    <update id="updateHotel" parameterType="hotelproject.repositories.vo.HotelVo">
        UPDATE hotels
        SET
            name = #{name},
            location = #{location},
            price = #{price},
            rating = #{rating}
        WHERE
            no = #{no}
    </update>

    <!-- 호텔 삭제 -->
    <delete id="deleteHotel" parameterType="int">
        DELETE FROM hotels
        WHERE no = #{no}
    </delete>

</mapper>
